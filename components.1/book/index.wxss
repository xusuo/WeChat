.container{
    position: relative;
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    box-shadow: 2px 2px 3px #e3e3e3;
    width: 240rpx;
    height: 360rpx;
}

.container image{
    width: 100%;
    height: 100%;
    border-radius: 2px;
}
.description{
    position: absolute;
    width: 100%;
    box-sizing: border-box;
    bottom: 0px;
    background-color: #fff;
    font-size: 24rpx;
    padding: 5rpx 10rpx 8rpx 15rpx;
    display: flex;
    flex-direction: column;
}

.totle{
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.author{
    font-size: 20rpx;
    color: #999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.foot{
    font-size: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}

.footer{
    color: #666;
}
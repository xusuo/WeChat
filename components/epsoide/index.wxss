  .container {
      display: inline-flex;
      flex-direction: row;
      height: 60rpx;
      line-height: 60rpx
  }

  .index-container {
      display: flex;
      flex-direction: row;
      align-items: baseline;
  }

  .plain {
      font-size: 32rpx;
  }

  .line {
      font-size: 60rpx;
      font-weight: 800;
      margin-right: 14rpx;
  }

  .vertical-line {
      margin-right: 14rpx;
      height: 44rpx;
      border-left: 2rpx solid black;
  }

  .date {
      display: flex;
      flex-direction: column;
      justify-content: center;
  }

  .month {
      font-size: 24rpx;
      line-height: 24rpx;
      padding-bottom: 4rpx;
  }

  .year {
      font-size: 20rpx;
      line-height: 20rpx;
      padding-bottom: 6rpx;
  }